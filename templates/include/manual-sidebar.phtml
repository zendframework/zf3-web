                            </option>
                        <?php endforeach ?>
                    </optgroup>
                <?php else : ?>
                    <option value="<?= $headline ?>"<?= ($currentPage == $headline)?' selected="selected"':'' ?>>
                        <?= $items ?>
                    </option>
                <?php endif ?>

            <?php endforeach ?>
        </select>
    </div>

    <?php
    $basePath = sprintf('/manual/%s/en/', $this->version);
    $this->inlineScript()->captureStart();
    echo <<<JS
